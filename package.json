{
  "name": "@basementdev/ethers-provider",
  "version": "0.0.2",
  "description": "Wrapper for ethers JSON-RPC provider",
  "private": false,
  "main": "dist/index.js",
  "license": "MIT",
  "typings": "dist/index.d.ts",
  "dependencies": {
    "@basementdev/sdk": "^1.0.8",
    "@ethersproject/abstract-provider": "^5.7.0",
    "@ethersproject/logger": "^5.7.0",
    "@ethersproject/properties": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@ethersproject/web": "^5.7.1"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "format": "npx prettier --write \"(src|test)/**/*.ts\"",
    "lint": "npx eslint src/**/*.ts",
    "prepublishOnly": "yarn test && yarn build",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "prepare": "husky install"
  },
  "repository": {
    "url": "https://github.com/basementdev/basement-ethers"
  },
  "bugs": {
    "url": "https://github.com/basementdev/basement-ethers/issues"
  },
  "files": [
    "dist/*"
  ],
  "keywords": [
    "ethers",
    "ethereum",
    "web3",
    "basement"
  ],
  "devDependencies": {
    "@types/jest": "^29.2.6",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard-with-typescript": "^31.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "husky": ">=6",
    "jest": "^29.3.1",
    "lint-staged": ">=10",
    "prettier": "^2.8.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "*"
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  }
}
