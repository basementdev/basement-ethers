{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitAny": true,
    "declaration": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "sourceMap": true,
    "moduleResolution": "Node",
    "strict": true,
    "lib": ["es2021", "dom"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
